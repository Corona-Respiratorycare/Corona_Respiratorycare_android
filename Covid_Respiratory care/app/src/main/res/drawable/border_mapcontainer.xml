<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="-50dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="40dp" />
        </shape>
    </item>

    <item
        android:left="-3dp"
        android:right="-3dp"
        android:bottom="-50dp"
        >
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="@color/navergreen_80"/>
            <corners
                android:radius="35dp"/>
        </shape>
    </item>
</layer-list>